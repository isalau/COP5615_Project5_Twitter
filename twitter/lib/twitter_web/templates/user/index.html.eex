<%= if TwitterWeb.Auth.signed_in?(@conn) do %>
<ul class="list-group mt-5" id="messages"></ul>

<form class="input-group mt-3" id="new-message">
  <input type="text" class="form-control" placeholder="Message " id="message-content" />
  <div class="input-group-append">
    <button class="btn btn-outline-success" type="submit">Send</button>
  </div>
</div>
<body>
  <div class = "row">
    <div class = "column">
      </div>
      <div class = "column" id= "msglist">
        <h1>Hi <%=  @username %>! What's on your mind?</h1>
        <script>
          var msglist = document.getElementById("msglist");
          msglist.setAttribute("data-uname", "<%=  @username %>");
          msglist.setAttribute("data-rname", "<%=  @username %>");
          msglist.setAttribute("data-sname", "<%=  @subs %>");
        </script>
</div>
  </div>
  <div class = "row">
    <div class = "column">
      <div class="allthebuttons">
        <div class="topad">
          <a class="btn" href="<%= Routes.query_path(@conn, :index, user_name: @username, results: @results) %>">Search</a>
        </div>

        <div class="topad">
          <a class="btn" href="<%= Routes.retweet_path(@conn, :index,user_name: @username) %>">Retweet</a>
        </div>

        <div class="topad">
          <a class="btn" href="<%= Routes.add_path(@conn, :index, user_name: @username) %>">Add</a>
        </div>

        <div class="topad">
          <%= form_for @conn, Routes.setting_path(@conn, :index, user_name: @username), fn f -> %>
             <%= submit "Delete Account", class: "btn" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class = "column">
      <div class="tweetbox">
        <%= form_for @conn, Routes.tweet_path(@conn, :tweet, user_name: @username ), fn f -> %>
          <%= text_input f, :tweet_text%>
          <%= submit "Tweet", class: "btn sub"%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="column tw">
      <div class="tweets">
      <h3>Your Tweets</h3>
        <%= for key <- get_keys(@username) do %>
          <%= render("tweets.html", key: key) %>
          <% end %>
      </div>
    </div>

    <div class="column" >
      <div class ="feed">
      <h3>Your Feed</h3>
      <div class="qresults">
        <%= if @feed != nil do %>
          <%= for key <- @feed do %>
            <%= render("tweets.html", key: key) %>
          <% end %>
          <%= else %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>

</body>
<% end %>
