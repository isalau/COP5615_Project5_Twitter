  width: 250px;
  padding: 5px;
  border: 1px solid #ccc;
  margin-top: 5px;
}

#chat-form textarea {
  width: 250px;
  padding: 5px;
  border: 1px solid #ccc;
  margin-top: 5px;

}

.nav-header {
  position: relative;
  width: 100%;
}

.nav-h1 {
  float: left;
  clear:none;
}

